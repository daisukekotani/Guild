<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<div class="container">
<div class="row">
<div class="col-xs-4">
<table>
  <tr>
    <th>プロフィール画像</th>
    <%= attachment_image_tag @user, :profile_image, :fill, 180, 180, format: 'jpeg' %>
  </tr>
  <tr>
    <th>ユーザーid</th> 
    <th><%= @user.id %></th>
  </tr>
  <tr>
    <th>ユーザー名</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @user.email %></th>
  </tr>
  <tr>
    <th>性別</th> 
    <% if @user.sex_hidden == false %>
    <th><%= @user.sex %></th>
    <% else %>
    <th>非公開</th>
    <% end %>
  </tr>
  <tr>
    <th>年齢</th>
    <% if @user.age_hidden == false %>
    <th><%= @user.age %></th>
    <% else %>
    <th>非公開</th>
    <% end %>
  </tr>
  <tr>
    <th>年収</th> 
    <% if @user.income_hidden == false %>
    <th><%= @user.income %></th>
    <% else %>
    <th>非公開</th>
    <% end %>
  </tr>
  <tr>
    <th>業種</th> 
    <th><%= @user.industry %></th>
  </tr>
  <tr>
    <th>職種</th> 
    <th><%= @user.job %></th>
  </tr>
  <tr>
    <th>自己紹介コメント</th>
    <th><%= @user.introduction %></th>
  </tr>
   <tr>
     <th>
       <%  if @user.id == current_user.id %>
       <%= link_to edit_user_path(@user) do %>
       <span class="col-xs-4 btn btn-default glyphicon glyphicon-wrench"></span>
       <% end %>
       <% end %>
     </th>
   </tr>
</table>
</div> <!--col-xs-3-->
<div class="col-xs-9">
</div><!--col-xs-9-->
</div><!--row -->
</div><!--container-->




