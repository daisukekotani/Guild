<div class="container">
<div class="row">
<div class="col-xs-12">
 <div class="dropdown">
 <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
 業種検索
 <span class="caret"></span>
 </button>
 <ul class="dropdown-menu" role="menu">
 	<% User.industries.keys.to_a.each do |key| %>
 	  <li role="presentation"><%= link_to key, users_path(industry_name: key) %></li>
 	<% end %>
 </ul>
 </div>
 
<!--業種検索-->
<!--業種が選択されていない場合は全ユーザー一覧-->
 <% if  @industry.nil? %>
 <h1>ユーザ一覧</h1>
 <% else %>
 <!--業種が選択されている場合はその業種のユーザー一覧-->
 <h1><%= @industry.name %></h1>
 <% end %>
 
<table class="table">
	<thead>
		<tr>
			<th>ユーザー画像</th>
			<th>名前</th>
			<th>性別</th>
			<th>年齢</th>
			<th>年収</th>
			<th>業種</th>
			<th>職種</th>
			<th>自己紹介</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	
　<tbody>
	<% @users.each do |user| %>
	　<tr>
	　　<td><%= attachment_image_tag(user, :profile_image, :fill, 34, 34, fallback: "no-image-mini.jpg") %></td>
	　　<td><%= user.name %></td>
	　　<% if user.sex_hidden == false %>
	　　<td><%= user.sex %></td>
	　　<% else %>
	　　<th>非公開</th>
	　　<% end %>
	　　<% if user.age_hidden == false %> 
	　　<td><%= user.age %></td>
	　　<% else %>
	　　<th>非公開</th>
      <% end %>
      <% if user.income_hidden == false %>
	　　<td><%= user.income %></td>
	　　<% else %>
	　　<th>非公開</th>
      <% end %>
	　　<td><%= user.industry %></td>
	　　<td><%= user.job %></td>
	　　<td><%= user.introduction %></td>
	　　<td>
	　　	<% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class: "btn-sm btn-primary" %>
        <% else %>
        <%= link_to 'フォローする', follow_path(user.id), method: :POST, class: "btn-sm btn-success" %>
      <% end %>
	　　</td>
	　　<td><%= link_to "マイページ", user_path(user) %></td>
	　</tr>　
	<% end %>
</tbody>

</div><!--col-xs-12-->
</div><!--row -->
</div><!--container-->