<h2>Results index</h2>

<!--voice一覧 -->
<table class="table table-hover table-inverse">
  <% if @range == '2' %>
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>

   <% if @voice.count == 0 %>
    <h6>声はありません</h6>
   <% else %>
   <tbody>
   <% @voice.each do |voice| %>
    <tr>
     <td>
      <%= link_to(voice.user) do %>
      <%= attachment_image_tag(voice.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
      <% end %>
     </td>
     
     <td>
      <%= link_to voice.body, voice, class: "voice_#{voice.id}" %>
     </td>
     <td><%= voice.body %></td>
    </tr>
   <% end %>
   <% end %>
   </tbody>

   <% else %>
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    
    <% if @user.count == 0 %>
     <h6>ユーザーはいません</h6>
    <% else %>
    
    <tbody>
     <% @user.each do |user| %>
      <tr>
       <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
       <td><%= user.name%></td>
       <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
 <% end %>
 </table>