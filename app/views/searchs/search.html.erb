<h2>検索結果</h2>

<!--voice一覧 -->
<table class="table table-hover table-inverse">
  <% if @range == 'voice' %>

   <% if @voice.count == 0 %>
    <h6>声はありません</h6>
   <% else %>
   <tbody>
     <% @voice.each do |voice| %>
      <tr>
        <td>
          <%= attachment_image_tag(voice.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
        </td>
        <td>
          <%= link_to voice.body, voice, class: "voice_#{voice.id}" %>
        </td>
      </tr>
     <% end %>
     <% end %>
   </tbody>
   <% else if @range == 'user' %>
   <!--< elsif @range == '1' %>-->
    
    
    <% if @user.count == 0 %>
     <h6>ユーザーはいません</h6>
    <% else %>
    
    <tbody>
     <% @user.each do |user| %>
      <tr>
       <td>
        <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
        </td>
       <td>
        <%= link_to user_path(user.id) do %>
 				   <%= user.name %>
 					　<% end %>
       </td>
       
      </tr>
      <% end %>
      <% end %>
      
      <% else %>
      <h1>ギルド員かギルド員の声を選択してください</h1>
      <% end %>
    </tbody>
 <% end %>
 </table>