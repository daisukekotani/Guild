
<div class="col-xs-9">
  <h2>ギルド員の声</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>ユーザー画像</th>
        <th>ユーザー名</th>
        <th>ヴォイス</th>
      </tr>
    </thead>
  
  
  
  <tbody>
    <% @voice.each do |voice| %>
      <tr>
        <td><%= attachment_image_tag voice.user, :profile_image, :fill, 34, 34, format: 'jpeg' %></td>
        <td><%= voice.user %></td>  
        <td><%= voice.body %></td>
        <td>
          <% if voice.goodjobed_by?(current_user) %>
          <li>
          <%= link_to voice_goodjobs_path(voice), method: :delete do %>
          <!--<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>-->
          <%= voice.goodjobs.count %> グッジョブ
          <% end %>
          </li>
          <% else %>
          <li>
          <%= link_to voice_goodjobs_path(voice), method: :post do %>
          <!--<i class="fa fa-heart-o" aria-hidden="true"></i>-->
          <%= voice.goodjobs.count %> グッジョブ
          <% end %>
          </li>
          <% end %>
        </td>
        <td><%= voice.post_comments.count %>件コメント</td>
      </tr>
    <% end %>
  </tbody>
 </table>  
  
  
</div><!--col-xs-9-->
</div><!--row -->
</div><!--container-->


